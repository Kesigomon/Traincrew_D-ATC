        <SolidColorBrush>
            <SolidColorBrush.Color>
                <Color A="1" R="255" G="255" B="255" />
            </SolidColorBrush.Color>
        </SolidColorBrush>
    </Window.Background>
    <Canvas x:Name="MainCanvas">
        
    </Canvas>
</Window>