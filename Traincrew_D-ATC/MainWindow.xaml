        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ATCWindow" 
        Height="400" Width="400" 
        WindowStyle="None" 
        AllowsTransparency="True" 
        Cursor="Hand"
        Topmost="True"
        ResizeMode="CanResizeWithGrip">
